<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- No network permissions needed for local-only app -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Userfrontend"
        tools:targetApi="31">
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Add/Edit Hike Activity -->
        <activity
            android:name=".activities.AddEditHikeActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />

        <!-- Hike List Activity -->
        <activity
            android:name=".activities.HikeListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />

        <!-- Hike Details Activity -->
        <activity
            android:name=".activities.HikeDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.HikeListActivity" />

        <!-- Observation List Activity -->
        <activity
            android:name=".activities.ObservationListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.HikeDetailsActivity" />

        <!-- Add/Edit Observation Activity -->
        <activity
            android:name=".activities.AddEditObservationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".activities.ObservationListActivity" />

        <!-- Search Activity -->
        <activity
            android:name=".activities.SearchActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>